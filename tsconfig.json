{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@erp": ["./src/modules/erp"],
      "@erp/*": ["./src/modules/erp/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"]
}
